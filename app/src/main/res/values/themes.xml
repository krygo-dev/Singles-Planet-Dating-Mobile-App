<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SinglesPlanet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Background color. -->
        <item name="backgroundColor">@color/background</item>
        <item name="background">@color/background</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_light</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_dark</item>
        <item name="colorSecondaryVariant">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SinglesPlanet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SinglesPlanet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SinglesPlanet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>